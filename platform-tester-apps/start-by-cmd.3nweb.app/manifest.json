{
	"name": "App that opens by command",
	
	"appDomain": "start-by-cmd.3nweb.app",

	"version": "0.1.0",

	"icon": "./assets/logo.png",

	"components": {

		"/index.html": {
			"startCmds": {
				"app-cmd-1": {
					"otherApps": "*"
				},
				"app-cmd-2": {
					"otherApps": "*"
				}
			},
			"runtime": "web-gui",
			"formFactor": "desktop",
			"windowOpts": {
				"useContentSize": true,
				"width": 600,
				"height": 400
			},
			"capsRequested": {
				"storage": {
					"appFS": [{
						"domain": "start-by-cmd.3nweb.app",
						"storage": "local"
					}]
				}
			}
		},

		"/index-phone.html": {
			"startCmds": {
				"app-cmd-1": {
					"otherApps": "*"
				},
				"app-cmd-2": {
					"otherApps": "*"
				}
			},
			"runtime": "web-gui",
			"formFactor": "phone",
			"capsRequested": {
				"storage": {
					"appFS": [{
						"domain": "start-by-cmd.3nweb.app",
						"storage": "local"
					}]
				}
			}
		}

	},

	"exposedFSResources": {
		"sample-config": {
			"allow": {
				"otherApps": [ "tests.3nweb.app" ]
			},
			"appStorage": "local",
			"path": "config/useful/to/others.json",
			"itemType": "file",
			"initValueSrc": "assets/init-conf-value.json"
		}
	}

}