{
	"name": "3NWeb platform tester",
	
	"appDomain": "tests.3nweb.app",

	"version": "1.2.3",

	"icon": "./assets/logo.png",

	"components": {
		
		"/main-tester.html": {
			"startedBy": "user",
			"runtime": "web-gui",
			"formFactor": "desktop",
			"capsRequested": {
				"appRPC": [
					"allowed_but_unknown",
					"OneShotDialog", "LongDialog",
					"ServiceInDeno", "LongServiceInDeno"
				],
				"keyrings": "all",
				"mail": {
					"receivingFrom": "all",
					"sendingTo": "all",
					"config": "all"
				},
				"storage": {
					"appFS": [
						{
							"domain": "tests.3nweb.app",
							"storage": "synced-n-local"
						}, {
							"domain": "sub-app-1.tests.3nweb.app",
							"storage": "synced-n-local"
						}, {
							"domain": "sub-app-2.tests.3nweb.app",
							"storage": "synced-n-local"
						}
					],
					"userFS": "all",
					"sysFS": "all"
				},
				"mailerid": true,
				"logToPlatform": true,
				"shell": {
					"userNotifications": true,
					"startAppCmds": {
						"thisApp": [ "command-1", "command-2" ],
						"otherApps": {
							"start-by-cmd.3nweb.app": [ "app-cmd-1", "app-cmd-2" ]
						}
					},
					"fsResource": {
						"otherApps": {
							"start-by-cmd.3nweb.app": "sample-config",
							"unknown.example.local": "some-resource"
						}
					},
					"openDashboard": true
				},
				"connectivity": "check",
				"system": {
					"apps": "all",
					"platform": "all",
					"monitor": "all",
					"logout": true
				}
			},
			"windowOpts": {
				"rememberWindowLocation": true
			}
		},
		
		"/main-tester-phone.html": {
			"startedBy": "user",
			"runtime": "web-gui",
			"formFactor": "phone",
			"capsRequested": {
				"appRPC": [
					"allowed_but_unknown",
					"OneShotDialog", "LongDialog",
					"ServiceInDeno", "LongServiceInDeno"
				],
				"keyrings": "all",
				"mail": {
					"receivingFrom": "all",
					"sendingTo": "all",
					"config": "all"
				},
				"storage": {
					"appFS": [
						{
							"domain": "tests.3nweb.app",
							"storage": "synced-n-local"
						}, {
							"domain": "sub-app-1.tests.3nweb.app",
							"storage": "synced-n-local"
						}, {
							"domain": "sub-app-2.tests.3nweb.app",
							"storage": "synced-n-local"
						}
					],
					"userFS": "all",
					"sysFS": "all"
				},
				"mailerid": true,
				"logToPlatform": true,
				"shell": {
					"userNotifications": true,
					"startAppCmds": {
						"thisApp": [ "command-1", "command-2" ],
						"otherApps": {
							"start-by-cmd.3nweb.app": [ "app-cmd-1", "app-cmd-2" ]
						}
					},
					"fsResource": {
						"otherApps": {
							"start-by-cmd.3nweb.app": "sample-config",
							"unknown.example.local": "some-resource"
						}
					},
					"openDashboard": true
				},
				"connectivity": "check",
				"system": {
					"apps": "all",
					"platform": "all",
					"monitor": "all",
					"logout": true
				}
			}
		},

		"/one-shot-dialog.html": {
			"runtime": "web-gui",
			"formFactor": "desktop",
			"services": {
				"OneShotDialog": {
					"thisAppComponents": "*"
				}
			},
			"childOfGUICaller": true,
			"forOneConnectionOnly": true,
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			},
			"windowOpts": {
				"modal": true,
				"useContentSize": true,
				"width": 400,
				"height": 300
			}
		},

		"/one-shot-dialog-phone.html": {
			"runtime": "web-gui",
			"formFactor": "phone",
			"services": {
				"OneShotDialog": {
					"thisAppComponents": "*"
				}
			},
			"childOfGUICaller": true,
			"forOneConnectionOnly": true,
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			}
		},

		"/long-dialog.html": {
			"runtime": "web-gui",
			"formFactor": "desktop",
			"services": {
				"LongDialog": {
					"thisAppComponents": "*"
				}
			},
			"childOfGUICaller": true,
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			},
			"windowOpts": {
				"useContentSize": true,
				"width": 400,
				"height": 300
			}
		},

		"/long-dialog-phone.html": {
			"runtime": "web-gui",
			"formFactor": "phone",
			"services": {
				"LongDialog": {
					"thisAppComponents": "*"
				}
			},
			"childOfGUICaller": true,
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			}
		},

		"/service-instance-for-one-connection.js": {
			"runtime": "deno",
			"services": {
				"ServiceInDeno": {
					"thisAppComponents": "*"
				}
			},
			"forOneConnectionOnly": true,
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			}
		},

		"/long-living-service-instance.js": {
			"runtime": "deno",
			"services": {
				"LongServiceInDeno": {
					"thisAppComponents": "*"
				}
			},
			"capsRequested": {
				"mailerid": true,
				"storage": {
					"appFS": "default"
				}
			}
		},

		"/started-by-command.html": {
			"startCmds": {
				"command-1": {
					"otherApps": "*",
					"thisAppComponents": "*"
				},
				"command-2": {
					"thisAppComponents": "*"
				}
			},
			"runtime": "web-gui",
			"formFactor": "desktop",
			"windowOpts": {
				"useContentSize": true,
				"width": 400,
				"height": 300
			}
		},

		"/started-by-command-phone.html": {
			"startCmds": {
				"command-1": {
					"otherApps": "*",
					"thisAppComponents": "*"
				},
				"command-2": {
					"thisAppComponents": "*"
				}
			},
			"runtime": "web-gui",
			"formFactor": "phone"
		}

	}

}